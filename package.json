{
  "name": "ancient-history-pwa",
  "version": "1.0.2",
  "description": "Ancient History Trivia Progressive Web App",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0",
    "npm": "please-use-yarn"
  },
  "packageManager": "yarn@1.22.19",
  "scripts": {
    "preinstall": "node -e \"if(process.env.npm_execpath.indexOf('yarn') === -1) throw new Error('Please use yarn instead of npm')\"",
    "dev": "vite",
    "build": "vite build",
    "build:check": "tsc --noEmit && vite build",
    "deploy": "yarn build && firebase deploy --only hosting",
    "deploy:full": "yarn build && firebase deploy",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:stripe-live": "./deploy-stripe-live.sh",
    "functions:build": "cd functions && yarn build",
    "functions:serve": "cd functions && yarn serve",
    "functions:logs": "firebase functions:log",
    "stripe:config": "echo 'Run: firebase functions:config:set stripe.secret_key=\"sk_live_YOUR_KEY\" stripe.webhook_secret=\"whsec_YOUR_SECRET\"'",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:e2e:cross-browser": "playwright test --project=chromium --project=firefox --project=webkit",
    "test:e2e:debug": "playwright test --debug",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "yarn:check": "yarn check --integrity",
    "yarn:clean": "yarn cache clean && rm -rf node_modules yarn.lock && yarn install"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.18",
    "@stripe/react-stripe-js": "^3.7.0",
    "@stripe/stripe-js": "^7.4.0",
    "@supabase/supabase-js": "^2.50.1",
    "clsx": "^2.0.0",
    "dompurify": "^3.2.6",
    "firebase": "^10.14.1",
    "firebaseui": "^6.1.0",
    "lucide-react": "^0.294.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "^6.20.1",
    "tailwind-merge": "^2.0.0",
    "web-vitals": "^5.0.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.1.0",
    "@types/react": "18.2.37",
    "@types/react-dom": "18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "firebase-tools": "^14.8.0",
    "gh-pages": "^6.3.0",
    "imagemin": "^9.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^10.0.0",
    "imagemin-svgo": "^11.0.1",
    "imagemin-webp": "^8.0.0",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.8.1",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.3.5",
    "vite-plugin-imagemin": "^0.6.1",
    "vite-plugin-pwa": "^0.20.0",
    "vitest": "^2.0.5",
    "workbox-build": "^7.3.0",
    "workbox-window": "^7.0.0"
  },
  "resolutions": {
    "brace-expansion": "^2.0.2",
    "**/brace-expansion": "^2.0.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "@types/react": "18.2.37",
    "@types/react-dom": "18.2.15",
    "**/react": "18.2.0",
    "**/react-dom": "18.2.0",
    "**/@types/react": "18.2.37",
    "**/@types/react-dom": "18.2.15",
    "**/firebase": "^10.14.1",
    "devtools-protocol": "0.0.1478340",
    "**/devtools-protocol": "0.0.1478340"
  }
}
