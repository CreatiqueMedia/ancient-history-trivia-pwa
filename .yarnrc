# Yarn configuration for yarn-only project
# This ensures consistent yarn usage across all environments

# Prefer offline installations when possible
yarn-offline-mirror "./yarn-cache"
yarn-offline-mirror-pruning true

# Disable npm registry fallback
disable-self-update-check true

# Force yarn usage
engine-strict true

# Cache settings for better performance
cache-folder "./yarn-cache"

# Network settings
network-timeout 300000
network-concurrency 16

# Security settings
strict-ssl true

# Logging
verbose false
silent false

# Auto-select versions based on resolutions
# This prevents manual version selection prompts
auto-select-versions true
prefer-offline true

# Auto-answer file for version prompts
answers-file .yarn-answers
