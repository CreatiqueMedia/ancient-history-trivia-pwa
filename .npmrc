# Block npm usage - use yarn instead
engine-strict=true

# Prevent npm install completely
fund=false
audit=false

# Force error on npm usage
prefix=/dev/null
cache=/dev/null

# Block npm registry access
registry=https://registry.npmjs.org/
always-auth=false

# Prevent package-lock.json creation
package-lock=false

# Error message for npm users
init-module=/dev/null

# Block npm scripts
scripts-prepend-node-path=false
