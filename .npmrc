# ðŸš« NPM COMPLETELY DISABLED - YARN ONLY PROJECT ðŸš«
# This configuration completely blocks npm usage

# Block npm by redirecting to invalid locations
prefix=/dev/null
cache=/dev/null
tmp=/dev/null
init-module=/dev/null

# Disable all npm functionality
fund=false
audit=false
package-lock=false
save=false
save-dev=false
save-optional=false
save-exact=false
scripts-prepend-node-path=false

# Force engine strict mode
engine-strict=true

# Block registry access for npm
registry=https://registry.npmjs.org/
always-auth=false
ignore-engines=false

# Additional blocking measures
progress=false
loglevel=error

# Force npm to fail on any operation
# This ensures npm commands will not work
user-config=/dev/null
global-config=/dev/null
