# Environment Variables Template for Ancient History PWA Development
# Copy this file to .env.local for development

# ============================================
# DEVELOPMENT FIREBASE CONFIGURATION
# ============================================
VITE_FIREBASE_API_KEY=dev-api-key
VITE_FIREBASE_AUTH_DOMAIN=ancient-history-dev.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=ancient-history-dev
VITE_FIREBASE_STORAGE_BUCKET=ancient-history-dev.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
VITE_ENV=development
VITE_API_BASE_URL=http://localhost:3001

# Feature flags for development
VITE_ENABLE_PUSH_NOTIFICATIONS=false
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_TRACKING=false
VITE_ENABLE_EMAIL_NOTIFICATIONS=false

# Debug flags
VITE_DEBUG_REDUX=true
VITE_DEBUG_ANALYTICS=true
VITE_DEBUG_AUTH=true

# Development server settings
VITE_HMR_PORT=24678
VITE_DEV_SERVER_PORT=5173

# Mock services
VITE_USE_MOCK_AUTH=true
VITE_USE_MOCK_PAYMENTS=true
VITE_USE_MOCK_ANALYTICS=true
